{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@app/*": ["./src/app/*"],
            "@pages/*": ["./src/pages/*"],
            "@widgets/*": ["./src/widgets/*"],
            "@features/*": ["./src/features/*"],
            "@entities/*": ["./src/entities/*"],
            "@shared/*": ["./src/shared/*"]
        }
    }
}
